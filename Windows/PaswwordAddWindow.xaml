<Window x:Class="AOA.Windows.PaswwordAddPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AOA.Windows"
        mc:Ignorable="d"
        Title="Подтверждение" Height="250" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10, 10">
            <TextBlock Text="Введите пароль для подтверждения" Margin="10"/>
            <PasswordBox Name="PbPass" Width="350"/>
        </StackPanel>
        <Button Content="Подтвердить" VerticalAlignment="Bottom" Width="200" Margin="10" Click="btnYesClick"/>
    </Grid>
</Window>
